#pkgmanager aliases
alias paclog='less /var/log/pacman.log'
alias see='./.diy/less.sh'
alias flatget='flatpak install flathub'
alias flatrem='flatpak uninstall'
alias flatshow='flatpak list'
alias nixget='nix-env --install'
alias nixrem='nix-env --uninstall'
alias nixshow='nix-env -qa --installed "*"'

#other aliases
alias hist='history | grep'
alias pushdots='cd ~/Github/dots && git switch main && git add . && git add -A && git commit -am "guh... mlem" && git push dots'
alias drag='blobdrop'
alias anime='ani-cli -q 1080p'
alias linc='less ~/.linuxcheatsheet'
alias vimc='less ~/.vimcheatsheet'
alias color='okolors'
alias vid='mpv'
alias img='feh'
alias timer='porsmo'
alias disk='ncdu'
alias c='clear && fastfetch'
alias f='fzf --query'
alias e='exit'
alias v='neovide'
alias y='yazi'
alias s='playerctl next'
alias p='playerctl play-pause'

#temp-nixpkgs (ONLY USE IF THE APP NEEDS INTERNET, OR IF TOO GIMMICKY TO KEEP ON PC)
alias pget='nix run --impure nixpkgs#pirate-get -- -T -S ~/Downloads'
alias gpt='nix run --impure nixpkgs#tgpt --'
alias phind='nix run --impure nixpkgs#tgpt -- --provider phind'
alias torbrowser='nix run --impure nixpkgs#tor-browser'
alias tor='nix run --impure nixpkgs#rqbit --'
alias metaclean='nix run --impure nixpkgs#metadata-cleaner --'
alias spotget='nix run --impure nixpkgs#spotdl --'
alias ytget='nix run --impure nixpkgs#yt-dlp --'
alias browse='nix run --impure nixpkgs#w3m --'
alias gping='nix run --impure nixpkgs#gping --'
